{

  "manifest_version": 2,
  "name": "TootShare",
  "version": "0.1",
  "description": "Add 'Toot' and 'Share to Mastodon' buttons to the web", 

  "permissions": ["storage", "tabs"],

  "optional_permissions": [
    "http://*/",
    "https://*/"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.twitter.com/*"],
      "js": ["tootshare.js", "content/twitter.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],

  "options_ui": {
    "page": "tootshare-admin.html"
  }

}
